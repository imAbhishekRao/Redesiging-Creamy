<cart-items class="modern-cart gradient color-{{ section.settings.color_scheme }} isolate{% if cart == empty %} is-empty{% else %} section-{{ section.id }}-padding{% endif %}">
  <div class="modern-cart__container">
    <!-- Header -->
    <div class="modern-cart__header">
      <h1 class="modern-cart__title">MY BAG ({{ cart.item_count }})</h1>
      <button class="modern-cart__close" onclick="window.history.back()">Ã—</button>
    </div>

    {%- if cart == empty -%}
      <div class="modern-cart__empty">
        <h2>Your cart is empty</h2>
        <a href="{{ routes.all_products_collection_url }}" class="modern-cart__checkout-btn">
          Continue Shopping
        </a>
      </div>
    {%- else -%}
      <!-- Cart Items -->
      <div class="modern-cart__items">
        <form action="{{ routes.cart_url }}" method="post" id="cart">
          {%- for item in cart.items -%}
            <div class="modern-cart-item" id="CartItem-{{ item.index | plus: 1 }}">
              <img 
                src="{{ item.image | image_url: width: 300 }}" 
                alt="{{ item.image.alt | escape }}"
                class="modern-cart-item__image"
                loading="lazy"
              >
              
              <div class="modern-cart-item__details">
                <h3 class="modern-cart-item__title">{{ item.product.title | escape }}</h3>
                
                {%- if item.product.has_only_default_variant == false -%}
                  <p class="modern-cart-item__variant">
                    {%- for option in item.options_with_values -%}
                      {{ option.value }}{% unless forloop.last %} / {% endunless %}
                    {%- endfor -%}
                  </p>
                {%- endif -%}
                
                <div class="modern-cart-item__quantity">
                  <div class="modern-cart-item__quantity-controls">
                    <button 
                      type="button" 
                      class="modern-cart-item__quantity-btn"
                      onclick="updateQuantity({{ item.index | plus: 1 }}, {{ item.quantity | minus: 1 }})"
                    >-</button>
                    <input 
                      type="number" 
                      class="modern-cart-item__quantity-input"
                      value="{{ item.quantity }}"
                      min="1"
                      data-index="{{ item.index | plus: 1 }}"
                      onchange="updateQuantity({{ item.index | plus: 1 }}, this.value)"
                    >
                    <button 
                      type="button" 
                      class="modern-cart-item__quantity-btn"
                      onclick="updateQuantity({{ item.index | plus: 1 }}, {{ item.quantity | plus: 1 }})"
                    >+</button>
                  </div>
                  <button 
                    type="button" 
                    class="modern-cart-item__remove"
                    onclick="removeItem({{ item.index | plus: 1 }})"
                  >Remove</button>
                </div>
              </div>
              
              <div class="modern-cart-item__price">
                {%- if item.original_price != item.final_price -%}
                  <div class="modern-cart-item__price-current">{{ item.final_price | money }}</div>
                  <div class="modern-cart-item__price-original">{{ item.original_price | money }}</div>
                {%- else -%}
                  <div class="modern-cart-item__price-current">{{ item.original_price | money }}</div>
                {%- endif -%}
              </div>
            </div>
          {%- endfor -%}
        </form>
      </div>

      <!-- Gift Bag Option -->
      <div class="modern-cart__gift-bag">
        <img 
          src="{{ 'icon-gift.svg' | asset_url }}" 
          alt="Gift Bag"
