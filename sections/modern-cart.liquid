{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  /* Modern Cart Design Styles */
  .modern-cart {
    background: #f8f8f8;
    min-height: 100vh;
  }

  .modern-cart__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
  }

  .modern-cart__header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
    padding-bottom: 1rem;
    border-bottom: 2px solid #e5e5e5;
  }

  .modern-cart__title {
    font-size: 2.4rem;
    font-weight: 700;
    color: #333;
    margin: 0;
  }

  .modern-cart__close {
    background: none;
    border: none;
    font-size: 2rem;
    cursor: pointer;
    color: #666;
    padding: 0.5rem;
  }

  .modern-cart__items {
    margin-bottom: 2rem;
  }

  .modern-cart-item {
    display: flex;
    align-items: center;
    padding: 1.5rem;
    background: white;
    border-radius: 12px;
    margin-bottom: 1rem;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
  }

  .modern-cart-item__image {
    width: 120px;
    height: 120px;
    object-fit: cover;
    border-radius: 8px;
    margin-right: 1.5rem;
  }

  .modern-cart-item__details {
    flex: 1;
  }

  .modern-cart-item__title {
    font-size: 1.6rem;
    font-weight: 600;
    color: #333;
    margin-bottom: 0.5rem;
  }

  .modern-cart-item__variant {
    font-size: 1.4rem;
    color: #666;
    margin-bottom: 1rem;
  }

  .modern-cart-item__quantity {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .modern-cart-item__quantity-controls {
    display: flex;
    align-items: center;
    border: 1px solid #ddd;
    border-radius: 6px;
    overflow: hidden;
  }

  .modern-cart-item__quantity-btn {
    background: #f8f8f8;
    border: none;
    padding: 0.8rem 1.2rem;
    cursor: pointer;
    font-size: 1.4rem;
    color: #333;
  }

  .modern-cart-item__quantity-input {
    border: none;
    text-align: center;
    width: 60px;
    padding: 0.8rem;
    font-size: 1.4rem;
  }

  .modern-cart-item__remove {
    background: none;
    border: none;
    color: #999;
    font-size: 1.4rem;
    cursor: pointer;
    margin-left: 1rem;
  }

  .modern-cart-item__price {
    text-align: right;
    min-width: 120px;
  }

  .modern-cart-item__price-current {
    font-size: 1.8rem;
    font-weight: 700;
    color: #e53e3e;
  }

  .modern-cart-item__price-original {
    font-size: 1.4rem;
    color: #999;
    text-decoration: line-through;
  }

  .modern-cart__gift-bag {
    display: flex;
    align-items: center;
    padding: 1.5rem;
    background: white;
    border-radius: 12px;
    margin-bottom: 2rem;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
  }

  .modern-cart__gift-bag-image {
    width: 60px;
    height: 60px;
    object-fit: cover;
    border-radius: 6px;
    margin-right: 1rem;
  }

  .modern-cart__gift-bag-text {
    flex: 1;
    font-size: 1.4rem;
    color: #333;
  }

  .modern-cart__gift-bag-checkbox {
    width: 20px;
    height: 20px;
    accent-color: #8b4513;
  }

  .modern-cart__summary {
    background: white;
    border-radius: 12px;
    padding: 2rem;
    margin-bottom: 2rem;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
  }

  .modern-cart__summary-row {
    display: flex;
    justify-content: space-between;
    margin-bottom: 1rem;
    font-size: 1.6rem;
  }

  .modern-cart__summary-total {
    font-weight: 700;
    font-size: 2rem;
    border-top: 2px solid #e5e5e5;
    padding-top: 1rem;
    margin-top: 1rem;
  }

  .modern-cart__checkout-btn {
    width: 100%;
    background: #8b4513;
    color: white;
    border: none;
    padding: 1.5rem;
    border-radius: 8px;
    font-size: 1.6rem;
    font-weight: 600;
    cursor: pointer;
    margin-bottom: 1rem;
  }

  .modern-cart__view-bag {
    text-align: center;
    text-decoration: underline;
    color: #666;
    font-size: 1.4rem;
    cursor: pointer;
  }

  .modern-cart__recommendations {
    margin-top: 3rem;
  }

  .modern-cart__recommendations-title {
    font-size: 2rem;
    font-weight: 700;
    color: #333;
    margin-bottom: 1.5rem;
  }

  .modern-cart__recommendations-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1.5rem;
    margin-bottom: 2rem;
  }

  .modern-cart__recommendation-item {
    background: white;
    border-radius: 12px;
    padding: 1rem;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    text-align: center;
  }

  .modern-cart__recommendation-image {
    width: 100%;
    height: 150px;
    object-fit: cover;
    border-radius: 8px;
    margin-bottom: 1rem;
  }

  .modern-cart__recommendation-title {
    font-size: 1.4rem;
    font-weight: 600;
    color: #333;
    margin-bottom: 0.5rem;
  }

  .modern-cart__recommendation-price {
    font-size: 1.6rem;
    font-weight: 700;
    color: #e53e3e;
    margin-bottom: 1rem;
  }

  .modern-cart__recommendation-heart {
    background: none;
    border: none;
    font-size: 1.8rem;
    color: #999;
    cursor: pointer;
  }

  .modern-cart__policies {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 2px solid #e5e5e5;
  }

  .modern-cart__policy-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 0;
    border-bottom: 1px solid #f0f0f0;
    cursor: pointer;
  }

  .modern-cart__policy-text {
    font-size: 1.4rem;
    color: #333;
  }

  .modern-cart__policy-arrow {
    font-size: 1.2rem;
    color: #999;
  }

  @media (max-width: 768px) {
    .modern-cart__container {
      padding: 1rem;
    }
    
    .modern-cart-item {
      flex-direction: column;
      text-align: center;
    }
    
    .modern-cart-item__image {
      margin-right: 0;
      margin-bottom: 1rem;
    }
    
    .modern-cart-item__price {
      text-align: center;
      margin-top: 1rem;
    }
  }
{%- endstyle -%}

