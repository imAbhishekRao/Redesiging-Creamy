            <button class="modern-cart__recommendation-heart">â™¥</button>
          </div>
        </div>
      </div>

      <!-- Looking for More -->
      <div class="modern-cart__recommendations">
        <h2 class="modern-cart__recommendations-title">LOOKING FOR MORE ?</h2>
