<script>
function updateQuantity(index, quantity) {
  if (quantity < 1) return;
  
  const form = document.getElementById('cart');
  const input = form.querySelector(`input[data-index="${index}"]`);
  input.value = quantity;
  form.submit();
}

function removeItem(index) {
  const form = document.getElementById('cart');
  const input = form.querySelector(`input[data-index="${index}"]`);
  input.value = 0;
  form.submit();
}
</script>

